{%- assign publication = page -%}
{%- if publication.conference -%}
@inproceedings{{ "{" }}{{ publication.slug }},
  booktitle = "{{ publication.conference.proceedings }} ({{ publication.conference.name }} {{ publication.year }})",
{%- elsif publication.journal -%}
@article{{ "{" }}{{ publication.slug }},
  journal = "{{ publication.journal.name }}",
  {%- if publication.journal.volume %}
  volume = "{{ publication.journal.volume }}",
    {%- if publication.journal.number %}
  number = "{{ publication.journal.number }}",
    {%- endif -%}
  {%- elsif publication.is_in_press %}
  volume = "in press",
  {%- endif -%}
{%- elsif publication.preprint -%}
@article{{ "{" }}{{ publication.slug }},
  journal = "{{ publication.preprint.server }} preprint {{ publication.preprint.id }}",
{%- elsif publication.thesis -%}
@phdthesis{{ "{" }}{{ publication.slug }},
  school = "{% include escape_latex.html value=publication.thesis.repository %}",
{%- endif %}
  title = "{% include escape_latex.html value=publication.title %}",
  author = "{% for author in publication.authors -%}
        {% assign author_info = site.data.authors[author] %}
        {%- include escape_latex.html value=author_info.last_name -%}, {% include escape_latex.html value=author_info.first_name -%}
        {%- if forloop.last == false %} and {% endif -%}
    {%- endfor -%}",
{%- if publication.pages %}
  pages = "{% include escape_latex.html value=publication.pages %}",
{%- endif -%}
{%- if publication.month %}
  month = "{{ publication.month }}",
{%- endif %}
  year = "{{ publication.year }}"
}
